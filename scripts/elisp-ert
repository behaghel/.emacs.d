#!/usr/bin/env bash
set -euo pipefail

export HOME=${HOME:-$PWD}

# Run all *-test.el under test/ with required helpers loaded.
if ls test/*-test.el >/dev/null 2>&1; then
  emacs --batch -Q -L . -l ert -l test/test-helpers.el     $(for f in test/*-test.el; do printf " -l %q" "$f"; done)     -f ert-run-tests-batch-and-exit
else
  echo "No tests found under test/" >&2
fi
